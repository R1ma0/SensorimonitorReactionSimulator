<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BlurredBackground">
        <Setter Property="ItemsControl.BitmapEffect">
            <Setter.Value>
                <BlurBitmapEffect Radius="20"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="UnBlurredBackground">
        <Setter Property="ItemsControl.BitmapEffect">
            <Setter.Value>
                <BlurBitmapEffect Radius="0"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>