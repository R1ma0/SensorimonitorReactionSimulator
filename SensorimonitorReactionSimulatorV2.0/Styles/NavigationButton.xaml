<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="NavigationButtonStyle" 
           TargetType="{x:Type Button}">
        <Setter Property="ItemsControl.Background" Value="{StaticResource c5_o1}"/>
        <Setter Property="ItemsControl.Height" Value="60"/>
        <Setter Property="ItemsControl.Width" Value="430"/>
        <Setter Property="ItemsControl.Margin" Value="50, 7.5, 0, 7.5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="20, 0, 0 , 20"
                            BorderThickness="0"
                            Background="{TemplateBinding Button.Background}">
                        <TextBlock Text="{TemplateBinding Button.Content}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="24"
                                   Padding="50, 0, 0, 0"
                                   Foreground="White"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>